<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/widget_wrapper"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/widgetBackgroundColor"
              android:orientation="vertical"
              tools:ignore="Overdraw">

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="@dimen/widget_header_padding"
        android:background="@color/widgetHeaderBackgroundColor"
        android:textColor="@color/widgetHeaderTextColor"
        android:textSize="@dimen/widget_header_text_size"
        android:textStyle="bold|italic" />

    <ListView
        android:id="@+id/widget_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:divider="@color/widgetDividerColor">

    </ListView>

</LinearLayout>